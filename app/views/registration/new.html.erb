<h1>Registration#new</h1>
<%= form_for @user, url: registration_create_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit 'Register' %>
<% end %>

